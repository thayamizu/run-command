{
  "name": "run-command",
  "displayName": "Run Command",
  "description": "",
  "version": "0.0.2",
  "publisher": "crest",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.run-command",
        "title": "RunCommand:Run Command"
      },
      {
        "command": "extension.run-command-selection",
        "title": "RunCommand:Run Command From Selected Text"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "VSCode RunCommand configuration",
      "properties":
      {
        "run-command.encoding": {
          "type": "string",
          "default": "Shift_JIS",
          "description": "default output encoding"
        },
        "run-command.history-size": {
          "type": "number",
          "default": "5",
          "description": "specify command history size"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "iconv-lite": "^0.4.13",
    "typings": "^1.3.2"
  }
}
